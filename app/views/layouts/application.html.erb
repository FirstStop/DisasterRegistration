<!DOCTYPE html>
<html>
<head>
  <title>BlueMountainsFireResponse</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="/qr_generator.js"></script>

  <script type="text/javascript" src="/qrscan/grid.js"></script>
  <script type="text/javascript" src="/qrscan/version.js"></script>
  <script type="text/javascript" src="/qrscan/detector.js"></script>
  <script type="text/javascript" src="/qrscan/formatinf.js"></script>
  <script type="text/javascript" src="/qrscan/errorlevel.js"></script>
  <script type="text/javascript" src="/qrscan/bitmat.js"></script>
  <script type="text/javascript" src="/qrscan/datablock.js"></script>
  <script type="text/javascript" src="/qrscan/bmparser.js"></script>
  <script type="text/javascript" src="/qrscan/datamask.js"></script>
  <script type="text/javascript" src="/qrscan/rsdecoder.js"></script>
  <script type="text/javascript" src="/qrscan/gf256poly.js"></script>
  <script type="text/javascript" src="/qrscan/gf256.js"></script>
  <script type="text/javascript" src="/qrscan/decoder.js"></script>
  <script type="text/javascript" src="/qrscan/qrcode.js"></script>
  <script type="text/javascript" src="/qrscan/findpat.js"></script>
  <script type="text/javascript" src="/qrscan/alignpat.js"></script>
  <script type="text/javascript" src="/qrscan/databr.js"></script>

</head>
<body>
  <div class="ui one column page grid"><div class="row"><div class="column">
    <div class="no-print" >
      <div class="ui grid"><div class="row">
        <div class="column four wide">
          <a href='/'><%= image_tag("logo_tagline.png", height:'100px') %></a>
        </div>

        <div class="right floated column five wide">
          <% if current_user %>
              <a href="<%= session_logout_path %>" class="ui blue button">
                <i class="user icon"></i>Logout
              </a>
          <% else %>
          <a href="<%= session_login_path %>" class="ui blue button" id="login">
            <i class="user icon"></i>Login
          </a>
          <% end %>
          <span><%= image_tag("people.png", height:'100px') %></span>
        </div>
      </div></div>
      <%= image_tag('lne.png', width:'100%') %>
      <div class="ui menu">
        <a class="item" href="/">Home</a>
        <a class="<%if @menu[:people]%>active red<%end%> item" href="/people">
          People Register
        </a>
        <a class="item" href="http://google.org/personfinder/test/query?role=seek">People Finder</a>
        <a class="item" href="/checklist">Checklists</a>
        <a class="<%if @menu[:service_providers]%>active blue<%end%> item" href="/service_providers">
          Service Providers
        </a>
        <a class="right floated item" href="#">Contact</a>
        <a class="right floated item" href="#">About</a>
      </div>
    </div>
    <%= yield %>
  </div></div></div>

</body>
</html>
