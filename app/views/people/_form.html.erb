<%= form_for(@person) do |f| %>
<% if @person.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

  <ul>
    <% @person.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="ui error form segment">
  <div class="ui blue segment">
    <h3>Basic Details</h3>
    <div class="two fields">
      <div class="field">
        <label for="first_name"><%= f.label :first_name %></label>
        <%= f.text_field :first_name %>
      </div>
      <div class="field">
        <label for="last_name"><%= f.label :last_name %></label>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="three fields">
      <div class="date field">
        <label for="dob"><%= f.label :dob %></label>
        <%= f.text_field :dob %>
      </div>
      <div class="field">
        <label for="sex"><%= f.label :sex %></label>
        <%= f.text_field :sex %>
      </div>
    </div>

    <div class="inline field">
      <div class="ui checkbox">
        <label for="has_privacy_concerns"><%= f.label :has_privacy_concerns %></label>
        <%= f.check_box :has_privacy_concerns %>
      </div>
    </div>

    <div class="field">
      <label for="mobile"><%= f.label :mobile %></label>
      <%= f.text_field :mobile %>
    </div>
    <div class="field">
      <label for="email"><%= f.label :email %></label>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <label for="address"><%= f.label :address %></label>
      <%= f.text_field :address %>
    </div>
    <div class="fields">
      <div class="field eight wide">
        <label for="suburb"><%= f.label :suburb %></label>
        <%= f.text_field :suburb %>
      </div>
      <div class="field four wide">
        <label for="state"><%= f.label :state %></label>
        <%= f.text_field :state %>
      </div>
      <div class="field four wide">
        <label for="postcode"><%= f.label :postcode %></label>
        <%= f.text_field :postcode %>
      </div>
    </div>
  </div>

  <div class="ui red segment">
    <h3>Current Contact</h3>
    <div class="three fields">
      <div class="field">
        <label for="current_contact_name">Name</label>
        <%= f.text_field :current_contact_name %>
      </div>
      <div class="field">
        <label for="current_contact_phone">Phone</label>
        <%= f.text_field :current_contact_phone %>
      </div>
      <div class="field">
        <label for="current_contact_email">Email</label>
        <%= f.text_field :current_contact_email %>
      </div>
    </div>
    <div class="field">
      <label for="current_contact_description">Description</label>
      <%= f.text_field :current_contact_description %>
    </div>
  </div>


  <div class="ui green segment">
    <h3>Status</h3>
    <div class="field">
      <label for="injury_description"><%= f.label :injury_description %></label>
      <%= f.text_field :injury_description %>
    </div>
    <div class="field">
      <label for="transport"><%= f.label :transport %></label>
      <%= f.text_field :transport %>
    </div>
    <div class="field">
      <label for="house_status"><%= f.label :house_status %></label>
      <%= f.text_field :house_status %>
    </div>
    <div class="field">
      <label for="others_at_address"><%= f.label :others_at_address %></label>
      <%= f.text_field :others_at_address %>
    </div>
    <div class="field">
      <label for="pet_details"><%= f.label :pet_details %></label>
      <%= f.text_field :pet_details %>
    </div>
  </div>
</div>

<%= f.fields_for :authenticable do |builder| %>
    <%= render "session/form", :f => builder %>
<% end %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
